/GreNewFont
{
  10 dict dup 3 1 roll def
  dup
  begin

  6 1 roll

  /FontType 3 def
  /FontMatrix exch def
  /FontBBox exch def
  /FontInfo 2 dict def
        FontInfo /UnderlinePosition 3 -1 roll put
        FontInfo /UnderlineThickness 3 -1 roll put
  /Encoding 256 array def
    0 1 255 { Encoding exch /.notdef put } for

  /CharProcs 256 dict def
    CharProcs /.notdef {} put

  /Metrics 256 dict def
    Metrics /.notdef 3 -1 roll put

  /BuildChar
    {
      /char exch def
      /fontdict exch def
      /charname fontdict /Encoding get char get def

      fontdict /Metrics get charname get aload pop
      setcachedevice
      fontdict
      begin
        Encoding char get
        CharProcs exch get
      end
      exec
    } def
  end

  definefont pop
} def


/AddChar
{
  begin
    Encoding 3 1 roll put
    CharProcs 3 1 roll put
    Metrics 3 1 roll put
  end
} def
