%--------------------------------------------------------------------------
% headchk.ps
% check to see if the windows ps header has been downloaded
% 
% if (is loaded)
%	continue
% else
%	if (old loaded)
%		print msg "please load NEW header"
%	else
%		print msg "please load header"
%
% Header Versions are maintained by the dictionary name
%  now-on! == PSWINDICT (in ..\windict.h)
%	new == Win33Dict
%	old == WinDict
%
% later versions of the header should check for old versions and complain
% accordingly
%--------------------------------------------------------------------------

#include "windict.h"

/PSWINDICT where
{
	% new header in place continue below
	pop
} {
	% new header not in place
	/WinDict where		% see if old header is in place
	{
		% old header is loaded

		(OLD PS header loaded, please load NEW) print flush
		100 100 moveto /Helvetica findfont 20 scalefont setfont
		(Old PS Driver Loaded) show
		100 84 moveto
		(Please download the new header)
		show showpage stop
		
	} {
		% old header not loaded either

		(Windows PS Header is missing) print flush
		100 100 moveto /Helvetica findfont 20 scalefont setfont
		(Windows PS Header has not been downloaded) show
		100 84 moveto
		(Please download the header)
		show showpage stop
	} ifelse
} ifelse
PSWINDICT begin
