# International mods
!IFNDEF LANG
RES_DIR=..\messages\usa
!ELSE
RES_DIR=..\messages\$(LANG)
!ENDIF

ALL :   iclean \
        finstall.res \
        sf_yn.bin

SRCDIR=..\src^\

# SRC subdirectory must be made before RC
sf_yn.bin: $(SRCDIR)sf_yn.exe
    copy $(SRCDIR)sf_yn.exe sf_yn.bin

# Create .TBL files from sources

.asm.tbl:
    masm $*;
    link $*;
    exe2bin $*, $@
    del $*.obj
    del $*.exe

usascii.tbl: usascii.asm

ecma94.tbl: ecma94.asm

generic7.tbl: generic7.asm

generic8.tbl: generic8.asm

roman8.tbl: roman8.asm

deskjet8.tbl: deskjet8.asm

# Create FINSTALL.RES

!IFNDEF LANG
finstall.res: $(RES_DIR)\finstall.rc \
    ..\ink\resource.h \
    ..\ink\strings.h \
    ..\ink\bitmaps.h \
    ..\ink\hpver.h \
    usascii.tbl generic7.tbl generic8.tbl \
    ecma94.tbl roman8.tbl deskjet8.tbl \
    sf_yn.bin \
    disk8514.bmp \
    cart8514.bmp \
    diskvga.bmp \
    diskega.bmp \
    cartvga.bmp \
    cartega.bmp
    rc -r -e -3 -i..\ink -Fo finstall.res $(RES_DIR)\finstall.rc
!ELSE
finstall.res:
    copy $(RES_DIR)\finstall.res finstall.res
!ENDIF

iclean:
    del finstall.res
